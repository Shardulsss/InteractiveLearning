<!DOCTYPE html>
<html>
<head>
	<meta charset='utf-8'>
	<meta http-equiv='X-UA-Compatible' content='IE=edge'>
	<meta name='viewport' content='width=device-width, initial-scale=1'>
	<title>Hand Written Digit Recognition using TensorFlow.js</title>
	<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@2.0.0/dist/tf.min.js"></script>
    <script>
        var items = ["Zero","One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine"];
        var item = items[Math.floor(Math.random()*items.length)];
    </script>
	
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" >    
	<link rel="stylesheet" type="text/css" href="styles/trial.css">
</head>
<body>
	
	<main>
		<div class="container mt-1">
			<div class="digit-demo-container">
				<div class="flex-2">
					<div class="col-12"><h3>Test Here</h3></div>
					
				</div>
				
                <h1 class="col-6">Draw</h1>
                <h2 class="col-6" id="number"><Script>document.getElementById("number").innerHTML = item</Script></h2>
					<div class="flex-two">
						<div id="canvas_box_wrapper" class="canvas-box-wrapper">
							<div id="canvas_box" class="canvas-box"></div>
							<br><br>
						</div>
						<div class="col-6">
							<div class="col-12">
								<button id="clear-button" class="btn btn-dark">Clear</button>
							</div>
							<div class="col-12">
								<button id="predict-button" class="btn btn-dark">Predict and Submit</button>
							</div>
							
							<div class="col-12">
								
								<a class="btn btn-dark" href="/test">Next</a>
							</div>
							<br><br>
							<h1 id="chartbox"><Script>document.getElementById("chartbox").innerHTML = "Result"</Script></h1>
							<div id="result_box" class="col-12 col-md-7">
								<h1 id="chart_box"></h1>
							</div>
							<div class="col-12 d-block mt-2 mt-md-0 text-md-left prediction-text"></div>
						</div>
					</div>
			</div>
		</div>
		<h1 id="chartbox"><Script>document.getElementById("chartbox").innerHTML = "Result"</Script></h1>
	</main>   
    

	<script src="../scripts/digit-recognition.js"></script>
</body>
</html>